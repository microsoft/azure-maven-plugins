{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "App",
	"description": "An app in Azure Spring Cloud service",
	"type": "object",
	"properties": {
		"appName": {
			"description": "The app name",
			"type": "string",
			"pattern": "^[a-zA-Z_][0-9a-zA-Z_\\-]*$"
		},
		"isPublic": {
			"description": "Public accessible to this app",
			"type": "boolean",
			"default": false
		}
	},
	"required": [
		"appName"
	]
}
